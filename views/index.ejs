<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <h2>Anuncios Relevantes</h2>
    <ul>
      <% results.forEach( (item)=> { %>
      <li>
        <h3><%= item.name %></h3>
        <p>Price: <%= item.price %></p>

        <img src="<%= item.photo %>" alt="Imagen de <%= item.name %>" />
        <p>
          <li class="status">
            <% if (item.sale) { %>
            <p>On sale</p>
            <button>Buy</button>
            <button class="offer">Send an offer</button>
            <% } else { %>
            <p>Out of Stock</p>
            <button>Sell</button>
            <button class="offer">Send an offer</button>
            <% } %>
          </li>
          <span>
            <small>
              Tags: <% item.tags.forEach((tag)=>{%>
              <a href="#">#<%= tag %></a>
              <%}) %>
            </small>
          </span>
        </p>
      </li>
      <%}) %>
    </ul>
  </body>
</html>
